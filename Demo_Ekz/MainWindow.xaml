<Window x:Class="Demo_Ekz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_Ekz"
        mc:Ignorable="d"
        Title="Learn" Height="450" Width="800" Icon="Image/school_logo.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="349*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="340*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0"  Source="Image/school_logo.png"/>
        <TextBlock  Grid.Column="1" Grid.Row="0" Text="Школа языков Леарн " VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="45" FontWeight="Bold"/>
        <Frame Name="ChangePages" Grid.Row="1" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
