<Page x:Class="Demo_Ekz.Pages.Autorizasia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo_Ekz.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autorizasia">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="50,0">
            <GroupBox Header="Введите пароль:" >
                <PasswordBox x:Name="Parol" />
            </GroupBox>
            <Button Content="Войти как администратор" Click="Button_Click"/>
            <Button Content="Вернуться назад" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Page>
